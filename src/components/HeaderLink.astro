---
export interface Props {
  href: string;
  target?: "_blank" | "_self" | "_parent" | "_top";
}

const { href, target } = Astro.props;

const { pathname } = Astro.url;
const isActive =
  href === pathname || href === pathname.replace(/\/$/, "") || href === pathname.replace(/(blog)\/.*/, "blog/");
---

<a href={href} class={(isActive ? "text-red-600 bold" : "text-red-500 ") + " "} target={target || ""}>
  <slot />
</a>
