---
import BaseLayout from "../layouts/BaseLayout.astro";
import TextBackground from "../components/TextBackground.astro";
import HideMenu from "../components/HideMenu";
import Icons from "../components/Icons";
import pfp from "../pfp.png";
import { Image } from "astro:assets";

interface Props {
   title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
   <main class="min-h-screen text-sky-400" id="main">
      <div class="absolute z--1">
         <TextBackground transition:persist transition:name="background" />
      </div>
      <div class="px-8 pt-8">
         <div class="flex flex-row justify-between items-center">
            <div class="flex flex-row gap-8 items-center md:flex-row md:gap-12">
               <a class="w-16 h-16 rounded-full lg:w-32 lg:h-32" href="/">
                  <Image
                     src={pfp}
                     alt="my profile picture"
                     class="w-full h-full rounded-full"
                     loading="eager"
                     transition:name="pfp"
                     aria-label="go to homepage"
                  />
               </a>
               <a class="flex justify-center items-center mt-2" href="/">
                  <h1
                     class="<sm:w-min font-heading text-sky-400 lg:text-8xl text-5xl"
                     transition:name="name"
                  >
                     ROHAN GODHA
                  </h1>
               </a>
            </div>
            <HideMenu client:load />
         </div>
      </div>
      <slot />
   </main>

   <div class="fixed left-0 bottom-10 w-full md:bottom-20 h-min-content">
      <Icons client:idle hideable={true} />
   </div>
</BaseLayout>
