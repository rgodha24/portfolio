---
import BaseLayout from "../layouts/BaseLayout.astro";
import Technology from "../components/Technology.astro";
import Projects from "../components/Projects.astro";
import TextBackground from "../components/TextBackground";
import Header from "../components/Header.astro";
import NavigateDownButton from "../components/NavigateDownBtn";
import Footer from "../components/Footer.astro";

export const prerender = true;
---

<BaseLayout>
   <section class="h-100vh w-100%">
      <div class="h-100vh w-100% absolute z--1">
         <TextBackground client:only />
      </div>
      <Header />
      <div class="centered transform-center w-full">
         <div class="flex flex-col pl-12 md:pl-15%">
            <div class="w-full font-bold">
               <h1
                  class="gradient-text bg-gradient-to-r bg-gradient-from-sky-400 bg-gradient-to-cyan-600 font-bold text-7xl md:text-8xl lg:text-9xl"
               >
                  Rohan Godha
               </h1>
               <h3 class="text-sky-600 font-bold text-2xl md:text-3xl lg:text-4xl xl:text-5xl">
                  aspiring web developer
               </h3>
            </div>
         </div>
      </div>
      <NavigateDownButton client:only />
   </section>
   <section class="max-w-[calc(75ch+1.25rem)] w-full m-auto px-10 py-5">
      <div
         class="min-w-full break-words overflow-auto prose text-slate-300 bbg min-h-100vh text-xl"
      >
         <p>
            Hi! My name is Rohan, and I'm a 18 year old graduating senior at
            <Technology href="https://brophyprep.org/">Brophy College Prep</Technology>, and
            incoming CS major at <Technology href="https://gatech.edu">Georgia Tech</Technology>.
         </p>
         <p>
            I love learning about new technology, currently including
            <Technology href="https://www.rust-lang.org/">Rust</Technology> and
            <Technology href="https://sst.dev">SST</Technology>.
         </p>
         <p>
            Robotics is one of my passions, and I'm currently on the Robotics team at Brophy,
            <Technology href="https://frcteam254.com">Broncobotics.</Technology>
         </p>
         <p>
            I've also started to love Graphic Design and typography, and I'm currently learning
            Adobe Illustrator
         </p>
         <h2 class="-mt-1 text-bold">
            <a class="not-prose hover:text-cyan-400 font-bold" href="/projects">Projects</a>
         </h2>
         <Projects amount={2} />
         <Footer />
      </div>
   </section>
</BaseLayout>

<style is:global>
   .centered {
      position: absolute;
      left: 50%;
      top: 50%;
   }
   .transform-center {
      transform: translate(-50%, -50%);
   }
</style>
