---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

type Props = { description?: string; title?: string };

const { description = SITE_DESCRIPTION, title = SITE_TITLE } = Astro.props;
---

<!DOCTYPE html>
<html lang='en' class='bg-gradient-to-bl to-slate-900 from-zinc-800 min-h-[100%] bg-no-repeat bg-cover overflow-auto'>
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class='max-w-[calc(75ch+1.25rem)] w-full m-auto break-words overflow-auto px-10 pt-5'>
    <Header title={title} />
    <main class='prose bbg text-slate-300 text-xl'>
      <slot />
    </main>
    <Footer />
    <style>
      :root {
        --headings: #e32760; 
        background-color: linear-gradient(#04102d, #060629); 
        @apply bg-black;
      }
      .bbg {
        --un-prose-body: #ffc1cc;
        --un-prose-headings: var(--headings);
        --un-prose-links: #fc5a78;
        --un-prose-lists: #cd6f6f;
        --un-prose-hr: #f5bdc3;
        --un-prose-captions: #f43f5e;
        --un-prose-code: #ff859c;
        --un-prose-borders: #fecdd3;
        --un-prose-bg-soft: #ffe4e6;
        --un-prose-invert-body: #fecdd3;
        --un-prose-invert-headings: #ffe4e6;
        --un-prose-invert-links: #ffe4e6;
        --un-prose-invert-lists: #f43f5e;
        --un-prose-invert-hr: #be123c;
        --un-prose-invert-captions: #fb7185;
        --un-prose-invert-code: #ffe4e6;
        --un-prose-invert-borders: #be123c;
        --un-prose-invert-bg-soft: #9f1239;
        --un-prose-font-mono: "Norwester", ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono",
          "Courier New", monospace;
      }
    </style>
  </body>
</html>
