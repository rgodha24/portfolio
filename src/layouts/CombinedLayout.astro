---
import BaseLayout from "./BaseLayout.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

type Props = { description?: string; title?: string; nav?: boolean };

const { description = SITE_DESCRIPTION, title = SITE_TITLE, nav = false } = Astro.props;
---

<BaseLayout description={description} title={title} class="">
   <Header nav={nav} />
   <main
      class="max-w-[calc(75ch+1.25rem)] w-full m-auto px-10 pt-5 break-words overflow-auto prose text-slate-300"
   >
      <slot />
   </main>
   <Footer />
</BaseLayout>
